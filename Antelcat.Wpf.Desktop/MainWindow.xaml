<Window x:Class="Antelcat.Wpf.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Antelcat.Wpf.Desktop"
        xmlns:ex="clr-namespace:Antelcat.Wpf.Extensions;assembly=Antelcat.Wpf"
        xmlns:vm="clr-namespace:Antelcat.Wpf.Desktop.ViewModels"
        xmlns:s="clr-namespace:Antelcat.Wpf.Desktop.Strings"
        mc:Ignorable="d" d:DataContext="{d:DesignInstance vm:ViewModel}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="{ex:Lang Key={x:Static s:ResourcesKeys.Description},Value={Binding Description}}">
            
        </TextBlock>
        <ComboBox Width="100" Height="40"
                  SelectedItem="{Binding Language,Mode=TwoWay}"
                  ItemsSource="{Binding Languages}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{ex:Lang Key={Binding .}, Value={Binding .}}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Grid>
</Window>